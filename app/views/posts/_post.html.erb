<div id="<%= dom_id post %>">
  <h2><%= post.title %></h2>
  <h4>posted by <%= link_to post.user.name, user_path(post.user) %></h4>
  <h6><%= pluralize(post.views, "view") %></h6>
  <%= link_to "👍", nil, remote: true, class:"btn"%>
  <%= link_to "❤️", nil, remote: true, class:"btn"%>
    <div>
      <%= post.body %>
    </div>
</div>